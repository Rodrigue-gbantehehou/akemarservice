{% extends 'base.html.twig' %}

{% block title %}Approvisionnement index
{% endblock %}

{% block body %}
	<div class="bg-body-light">
		<div class="content content-full">
			<div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center py-2">
				<div class="flex-grow-1">
					<h1 class="h3 fw-bold mb-1">
						Approvisionnement
					</h1>
					<h2 class="fs-base lh-base fw-medium text-muted mb-0">
						Tableau recapitilatif des approvisionnement effectué
					</h2>
				</div>
				<nav class="flex-shrink-0 mt-3 mt-sm-0 ms-sm-3" aria-label="breadcrumb">
					<ol class="breadcrumb breadcrumb-alt">
						<li class="breadcrumb-item">
							<a class="link-fx" href="javascript:void(0)">consommable</a>
						</li>
						<li class="breadcrumb-item" aria-current="page">
							Approvisionnement
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
	<!-- END Hero -->
	<!-- Dynamic Table with Export Buttons -->
	<div class="content">
		<div class="block block-rounded">
			<div class="block-header block-header-default">
				<h3 class="block-title">
					<button type="button" class="btn btn-alt-primary " data-bs-toggle="modal" data-bs-target="#modal-block-popin">Ajouter</button>
				</h3>
			</div>
			<div
				class="block-content block-content-full overflow-x-auto">
				<!-- DataTables init on table by adding .js-dataTable-buttons class, functionality is initialized in js/pages/be_tables_datatables.min.js which was auto compiled from _js/pages/be_tables_datatables.js -->
				<table class="table table-bordered table-striped ">
					<thead>
						<tr>
							<th class="text-center" style="width: 10px;">#</th>
							<th class="text-center" style="width: 50px;">consommable
							</th>
							<th class="text-center" style="width: 80px;">Quantité</th>
							<th class="text-center" style="width: 80px;">Prix d'achat</th>
							<th class="text-center" style="width: 50px;">Date
							</th>
							

						</tr>
					</thead>
					<tbody>
						{% for approvisionnement in approvisionnements %}
							<tr>
								<td class="text-center fs-sm">{{ loop.index }}</td>
								<td class="text-center fs-sm">{{ approvisionnement.consommable }}</td>
								<td class="text-center fs-sm">{{ approvisionnement.quantite }}</td>
								<td class="text-center fs-sm">{{ approvisionnement.montant }} F</td>
								<td class="text-center fs-sm">{{ approvisionnement.created|date('d-m-Y')  }}</td>

								
							</tr>
						{% else %}
							<tr>
								<td colspan="6">no records found</td>
							</tr>
						{% endfor %}

					</tbody>
				</table>

			</div>
		</div>
	</div>
	<div class="modal fade" id="modal-block-popin" tabindex="-1" role="dialog" aria-labelledby="modal-block-popin" aria-hidden="true">
		<div class="modal-dialog modal-dialog-popin" role="document">
			<div class="modal-content">
				{% include "approvisionnement/_form.html.twig" %}
			</div>
		</div>
	</div>
	<!-- END Dynamic Table with Export Buttons -->


{% endblock %}
