{% extends 'base.html.twig' %}

{% block title %}Client index
{% endblock %}

{% block body %}

	<!-- Hero -->
	<div class="bg-body-light">
		<div class="content content-full">
			<div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center py-2">
				<div class="flex-grow-1">
					<h1 class="h3 fw-bold mb-1">
						DataTables
					</h1>
					<h2 class="fs-base lh-base fw-medium text-muted mb-0">
						Tables transformed with dynamic features.
					</h2>
				</div>
				<nav class="flex-shrink-0 mt-3 mt-sm-0 ms-sm-3" aria-label="breadcrumb">
					<ol class="breadcrumb breadcrumb-alt">
						<li class="breadcrumb-item">
							<a class="link-fx" href="javascript:void(0)">Tables</a>
						</li>
						<li class="breadcrumb-item" aria-current="page">
							DataTables
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
	<!-- END Hero -->
	<!-- Search -->
	<div class="content">
		<form action="be_pages_generic_search.html" method="POST">
			<div class="input-group">
				<input type="text" class="form-control" placeholder="Search..">
				<span class="input-group-text">
					<i class="fa fa-fw fa-search"></i>
				</span>
			</div>
		</form>
	</div>
	<!-- END Search -->
	<!-- Page Content -->
	<div
		class="content">
		<!-- Results -->
		<div class="block block-rounded overflow-hidden">
			<ul class="nav nav-tabs nav-tabs-block" role="tablist">

				<li class="nav-item">
					<button type="button" class="nav-link active" id="search-users-tab" data-bs-toggle="tab" data-bs-target="#search-users" role="tab" aria-controls="search-users" aria-selected="true">Clients</button>
				</li>

			</ul>
			<div
				class="block-content tab-content overflow-hidden">

				<!-- Users -->
				<div class="tab-pane fade fade-up show active" id="search-users" role="tabpanel" aria-labelledby="search-users-tab" tabindex="0">

					<table class="table table-striped table-vcenter">
						<thead>
							<tr>
								<th class="text-center" style="width: 70px;">
									<i class="si si-user"></i>
								</th>
								<th>Nom et Prenom</th>
								<th class="d-none d-sm-table-cell">Numero</th>
								<th class="d-none d-sm-table-cell">Adresse</th>
								<th class="d-none d-lg-table-cell" style="width: 15%;">statut</th>
								<th class="text-center" style="width: 80px;">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for client in clients %}


								<tr>
									<td class="text-center">
										<img class="img-avatar img-avatar48" src="assets/media/avatars/avatar15.jpg" alt="">
									</td>
									<td class="fw-semibold">
										{% if client.nomClient %}
											<a href="javascript:void(0)">{{client.nomClient}}</a>
										{% else %}
											<a href="javascript:void(0)">Ajouter</a>
										{% endif %}
									</td>
									<td class="d-none d-sm-table-cell">
										{{client.telephoneClient}}
									</td>
									<td class="d-none d-sm-table-cell">
										{% if client.nomClient %}
											<a href="javascript:void(0)">{{client.adresse}}</a>
										{% else %}
											<a href="javascript:void(0)">Ajouter</a>
										{% endif %}
									</td>
									<td class="d-none d-lg-table-cell">
										{% if client.statut %}
											<span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-info-light text-info">{{client.statut}}</span>
										{% else %}
											<a href="javascript:void(0)">Ajouter</a>
										{% endif %}
									</td>
									<td class="text-center">
										<div class="btn-group">
											<button type="button" class="btn btn-sm btn-alt-secondary" data-bs-toggle="tooltip" title="Edit Client">
												<i class="fa fa-pencil-alt"></i>
											</button>
											<button type="button" class="btn btn-sm btn-alt-secondary" data-bs-toggle="tooltip" title="Delete Client">
												<i class="fa fa-times"></i>
											</button>
										</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<nav aria-label="Users Search Navigation">
						<ul class="pagination pagination-sm">
							<li class="page-item">
								<a class="page-link" href="javascript:void(0)" tabindex="-1" aria-label="Previous">
									Prev
								</a>
							</li>
							<li class="page-item active">
								<a class="page-link" href="javascript:void(0)">1</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="javascript:void(0)">2</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="javascript:void(0)">3</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="javascript:void(0)">4</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="javascript:void(0)" aria-label="Next">
									Next
								</a>
							</li>
						</ul>
					</nav>
				</div>
				<!-- END Users -->

			</div>
		</div>
		<!-- END Results -->
	</div>
	<div class="modal fade" id="modal-block-popin" tabindex="-1" role="dialog" aria-labelledby="modal-block-popin" aria-hidden="true">
		<div class="modal-dialog modal-dialog-popin" role="document">
			<div class="modal-content">
				{% include "client/_form.html.twig" %}
			</div>
		</div>
	</div>


{% endblock %}
