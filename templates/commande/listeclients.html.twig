{% extends 'base.html.twig' %}
{% block title %}Client index
{% endblock %}
{%
block body %}

	<!-- Hero -->

	<!-- END Hero -->
	<!-- Search -->
		<div class="content"> <form action="{{ path('app_commande') }}" method="GET">
			<div class="input-group">
				<input type="text" class="form-control" placeholder="Search.." name="query"/>
				<span class="input-group-text">
					<button type="submit">
						<i class="fa fa-fw fa-search"></i>
					</button>
				</span>
			</div>
		</form>
	</div>
	<!-- END Search -->
	<!-- Page Content -->
	<div
		class="content">
		<!-- Results -->
		<div class="block block-rounded overflow-hidden">
			<div class="block-header block-header-default">
				<h3 class="block-title">
					<button type="button" class="btn btn-alt-primary" data-bs-toggle="modal" data-bs-target="#modal-block-popin">
						Ajouter
					</button>
				</h3>
			</div>
			<div
				class="block-content tab-content overflow-hidden">
				<!-- Users -->

				<table class="table table-striped table-vcenter">
					<thead>
						<tr>
							<th>Nom et Prenom</th>
							<th class="d-none d-sm-table-cell">Numero</th>
							<th class="d-none d-sm-table-cell">Adresse</th>
							<th class="d-none d-lg-table-cell" style="width: 15%">statut</th>
							<th class="text-center" style="width: 80px">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for client in clients %}

							<tr>
								<td class="fw-semibold">
									{% if client.nomClient %}
										<a href="javascript:void(0)">{{ client.nomClient }}</a>
									{% else %}
										<a href="javascript:void(0)">Ajouter</a>
									{% endif %}
								</td>
								<td class="d-none d-sm-table-cell">
									{{ client.telephoneClient }}
								</td>
								<td class="d-none d-sm-table-cell">
									{% if client.nomClient %}
										<a href="javascript:void(0)">{{ client.adresse }}</a>
									{% else %}
										<a href="javascript:void(0)">Ajouter</a>
									{% endif %}
								</td>
								<td class="d-none d-lg-table-cell">
									{% if client.statut %}
										<span class="fs-xs fw-semibold d-inline-block py-1 px-3 rounded-pill bg-info-light text-info">{{ client.statut }}</span>
									{% else %}
										<a href="javascript:void(0)">Ajouter</a>
									{% endif %}
								</td>
								<td class="text-center">
									<div class="btn-group">
										<a class="btn btn-sm btn-alt-secondary" href="{{ path('app_detailcommande_new', { id: client.id }) }}">
											Commander
										</a>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5" class="text-center">Auccun client trouv√©</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		<!-- END Results -->
	</div>
	<div class="modal fade" id="modal-block-popin" tabindex="-1" role="dialog" aria-labelledby="modal-block-popin" aria-hidden="true">
		<div class="modal-dialog modal-dialog-popin" role="document">
			<div class="modal-content">
				{% include "client/_form.html.twig" %}

			</div>
		</div>
	</div>
{% endblock %}
